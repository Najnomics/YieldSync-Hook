{
  "name": "yieldsync-avs",
  "version": "0.1.0",
  "description": "YieldSync AVS - Uniswap V4 Hook with EigenLayer AVS",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:e2e": "jest e2e.test.ts",
    "deploy:core": "cd ../contracts && forge script script/DeployEigenLayerCore.s.sol --rpc-url $RPC_URL --broadcast",
    "deploy:yieldsync": "cd ../contracts && forge script script/DeployYieldSync.s.sol --rpc-url $RPC_URL --broadcast",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@viem/anvil": "^0.2.0",
    "ethers": "^6.8.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/*.test.ts"],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "keywords": [
    "eigenlayer",
    "avs",
    "uniswap",
    "v4",
    "hooks",
    "yield",
    "lst",
    "liquid-staking"
  ],
  "author": "YieldSync Team",
  "license": "MIT"
}
