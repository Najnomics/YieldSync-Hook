# Optional: Slack webhook for deployment notifications  
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# ============================================
# SAFETY SETTINGS
# ============================================

# Enable extra safety checks for mainnet deployments
ENABLE_MAINNET_SAFETY_CHECKS=true

# Require manual confirmation for mainnet deployments
REQUIRE_MAINNET_CONFIRMATION=true

# Enable contract verification
ENABLE_CONTRACT_VERIFICATION=true

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Enable verbose logging
VERBOSE_LOGGING=true

# Save deployment artifacts
SAVE_DEPLOYMENT_ARTIFACTS=true

# Enable gas reporting
ENABLE_GAS_REPORTING=true