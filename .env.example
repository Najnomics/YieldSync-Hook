ROCKET_POOL_RETH_ADDRESS=0xae78736Cd615f374D3085123A210448E74Fc6393
ROCKET_POOL_API_URL=https://api.rocketpool.net/api
ROCKET_POOL_API_KEY=your_rocket_pool_api_key_here

# Coinbase
COINBASE_CBETH_ADDRESS=0xBe9895146f7AF43049ca1c1AE358B0541Ea49704
COINBASE_API_URL=https://api.coinbase.com/v2
COINBASE_API_KEY=your_coinbase_api_key_here

# Frax Protocol
FRAX_SFRXETH_ADDRESS=0xac3E018457B222d93114458476f3E3416Abbe38F
FRAX_API_URL=https://api.frax.finance/v1
FRAX_API_KEY=your_frax_api_key_here

# =============================================================================
# UNISWAP V4 CONFIGURATION
# =============================================================================

# Uniswap V4 Core Contract Addresses
UNISWAP_V4_POOL_MANAGER=0x0000000000000000000000000000000000000000
UNISWAP_V4_FACTORY=0x0000000000000000000000000000000000000000

# =============================================================================
# OPERATOR CONFIGURATION
# =============================================================================

# AVS Operator Configuration
OPERATOR_NAME=YieldSync-Operator
OPERATOR_DESCRIPTION=Yield monitoring operator for YieldSync AVS
OPERATOR_WEBSITE=https://yieldsync.xyz/operator
OPERATOR_LOGO_URL=https://yieldsync.xyz/operator-logo.png

# BLS Key Configuration
BLS_PRIVATE_KEY=your_bls_private_key_here
BLS_PUBLIC_KEY=your_bls_public_key_here

# =============================================================================
# MONITORING & ALERTING
# =============================================================================

# Discord Webhook for alerts
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url_here

# Slack Webhook for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_webhook_url_here

# Telegram Bot for alerts
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB for storing yield data and position information
MONGODB_URI=mongodb://localhost:27017/yieldsync
MONGODB_DATABASE=yieldsync
MONGODB_USERNAME=your_mongodb_username
MONGODB_PASSWORD=your_mongodb_password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis for caching and rate limiting
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/yieldsync.log

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret for API authentication
JWT_SECRET=your_jwt_secret_here

# API Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=10

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development mode
NODE_ENV=development
DEBUG=true

# Test configuration
TEST_MODE=false
MOCK_LST_DATA=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Deployment environment
DEPLOYMENT_ENV=local

# Gas configuration
GAS_LIMIT=8000000
GAS_PRICE=20000000000
MAX_FEE_PER_GAS=20000000000
MAX_PRIORITY_FEE_PER_GAS=2000000000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_AUTO_ADJUSTMENT=true
ENABLE_YIELD_MONITORING=true
ENABLE_POSITION_TRACKING=true
ENABLE_ALERTS=true
ENABLE_ANALYTICS=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Yield monitoring interval (seconds)
YIELD_MONITORING_INTERVAL=900

# Position adjustment threshold (basis points)
ADJUSTMENT_THRESHOLD_BPS=50

# Maximum adjustment frequency (seconds)
MAX_ADJUSTMENT_FREQUENCY=21600

# =============================================================================
# ECONOMIC CONFIGURATION
# =============================================================================

# Operator rewards
OPERATOR_REWARD_BPS=1000
LP_REWARD_BPS=8500
PROTOCOL_FEE_BPS=300
GAS_COMPENSATION_BPS=200

# Slashing configuration
SLASH_THRESHOLD_BPS=100
SLASH_PENALTY_BPS=1000
