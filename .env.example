# YieldSync Hook Deployment Configuration
# Copy this file to .env and fill in your values

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================

# Private key of the deploying account (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Address corresponding to the private key above
DEPLOYER_PRIVATE_KEY_ADDRESS=0x...

# ============================================
# RPC ENDPOINTS
# ============================================

# Mainnet RPC (required for mainnet deployment)
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your_api_key

# Testnet RPCs
GOERLI_RPC_URL=https://eth-goerli.g.alchemy.com/v2/your_api_key
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your_api_key
HOLESKY_RPC_URL=https://ethereum-holesky-rpc.publicnode.com

# Local development
ANVIL_RPC_URL=http://127.0.0.1:8545

# ============================================
# ETHERSCAN VERIFICATION
# ============================================

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key

